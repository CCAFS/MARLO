<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN" "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<!-- Add addition packages and configuration here. -->
	<package name="admin" namespace="/admin" extends="marlo-default">

		<action name="{crp}/management" class="org.cgiar.ccafs.marlo.action.crp.admin.CrpAdminManagmentAction">
			<!-- interceptor-ref name="autoLogin" / -->
			<interceptor-ref name="crpAdminStack" />			
			<result name="input">/WEB-INF/views/admin/management.ftl</result>
			<result name="success" type="redirectAction">
        <param name="actionName">${crpSession}/management</param>
      </result>
    </action>

    <action name="{crp}/regionalMapping" class="org.cgiar.ccafs.marlo.action.BaseAction">
      <!-- interceptor-ref name="autoLogin" / -->
      <interceptor-ref name="crpAdminStack" />
      <result name="input">/WEB-INF/views/admin/regionalMapping.ftl</result>
      <result name="success" type="redirectAction">
        <param name="actionName">${crpSession}/regionalMapping</param>
      </result>
    </action>
    
    <action name="{crp}/siteIntegration" class="org.cgiar.ccafs.marlo.action.crp.admin.CrpSiteIntegrationAction">
      <!-- interceptor-ref name="autoLogin" / -->
      <interceptor-ref name="crpAdminStack" />  
      <result name="input">/WEB-INF/views/admin/siteIntegration.ftl</result>
    </action>
    
    <action name="{crp}/ppaPartners" class="org.cgiar.ccafs.marlo.action.crp.admin.CrpPpaPartnersAction">
      <!-- interceptor-ref name="autoLogin" / -->
      <interceptor-ref name="crpAdminStack" />
      <result name="input">/WEB-INF/views/admin/ppaPartners.ftl</result>
    </action>
   
    <action name="{crp}/locations" class="org.cgiar.ccafs.marlo.action.BaseAction">
      <!-- interceptor-ref name="autoLogin" / -->
      <interceptor-ref name="crpAdminStack" />
      <result name="input">/WEB-INF/views/admin/locations.ftl</result>
    </action>

  </package>

</struts>

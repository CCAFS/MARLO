<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN" "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<!-- Add addition packages and configuration here. -->
	<package name="admin" namespace="/admin" extends="marlo-default">

		<action name="{crp}/management" class="org.cgiar.ccafs.marlo.action.crp.admin.CrpAdminManagmentAction">
			<!-- interceptor-ref name="autoLogin" / -->
			<interceptor-ref name="adminStack" />
			<interceptor-ref name="canEditCrpAdmin" />			
			<result name="input">/WEB-INF/views/admin/management.ftl</result>
			<result name="success" type="redirectAction">
        <param name="actionName">${crpSession}/management</param>
      </result>
		</action>
		
		<action name="{crp}/leaders" class="org.cgiar.ccafs.marlo.action.crp.admin.CrpLeadersAdminMagmentAction">
      <!-- interceptor-ref name="autoLogin" / -->
      <interceptor-ref name="i18nFile" />
      <interceptor-ref name="requireUser" />
      <interceptor-ref name="defaultStack" />
      <result name="input">/WEB-INF/views/admin/leaders.ftl</result>
    </action>
		
	</package>
</struts>

		<action name="{crp}/summaries"
			class="org.cgiar.ccafs.marlo.action.BaseAction">
			<!-- interceptor-ref name="autoLogin" / -->
			<interceptor-ref name="homeStack" />
			<result name="input">/WEB-INF/crp/views/summaries/boardSummaries.ftl
			</result>
		</action>


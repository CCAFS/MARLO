#Create new column is_active
DROP PROCEDURE IF EXISTS `add_column_to_cross_cutting_scoring`;
DELIMITER ;;
CREATE PROCEDURE `add_column_to_cross_cutting_scoring`() 
BEGIN 
IF (SELECT EXISTS (
SELECT * FROM information_schema.COLUMNS WHERE column_name='is_active' AND table_name='cross_cutting_scoring' AND table_schema = DATABASE())) = 0
THEN
    ALTER TABLE `cross_cutting_scoring`
    ADD COLUMN `is_active` TINYINT(1)  DEFAULT 1 NOT NULL;
END IF; 
END ;;
DELIMITER ;
CALL add_column_to_cross_cutting_scoring();
DROP PROCEDURE `add_column_to_cross_cutting_scoring`;


<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC 
"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN" 
  "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
  <!-- Add addition packages and configuration here. -->
  <package name="impactPathway" namespace="/impactPathway" extends="marlo-default">
    
    <action name="{crp}/outcomes" class="org.cgiar.ccafs.marlo.action.impactpathway.OutcomesAction">
      <interceptor-ref name="impactPathwayStack" />			
      <result name="input">/WEB-INF/crp/views/impactPathway/outcomes.ftl</result>
      <result name="success" type="redirectAction">
        <param name="actionName">${crpSession}/outcomes</param>
        <param name="crpProgramID">${crpProgramID}</param>
        <param name="edit">true</param> <param name="phaseID">${phaseID}</param>
      </result>
      <result name="cancel" type="redirectAction">
        <param name="actionName">${crpSession}/outcomes</param>
        <param name="crpProgramID">${crpProgramID}</param>
        <param name="edit">true</param> <param name="phaseID">${phaseID}</param>
        <param name="cancel">true</param>
      </result>
      <result name="redirect" type="redirectAction">
        <param name="actionName">${url}</param>
        <param name="edit">true</param> <param name="phaseID">${phaseID}</param>
        <param name="crpProgramID">${crpProgramID}</param>
      </result>
    </action>
    
    <action name="{crp}/clusterActivities" class="org.cgiar.ccafs.marlo.action.impactpathway.ClusterActivitiesAction">
      <interceptor-ref name="impactPathwayStack" />     
      <result name="input">/WEB-INF/crp/views/impactPathway/clusterActivities.ftl</result>
      <result name="success" type="redirectAction">
        <param name="actionName">${crpSession}/clusterActivities</param>
        <param name="crpProgramID">${crpProgramID}</param>
        <param name="edit">true</param> <param name="phaseID">${phaseID}</param>
      </result>
      <result name="redirect" type="redirectAction">
        <param name="actionName">${url}</param>
        <param name="edit">true</param> <param name="phaseID">${phaseID}</param>
        <param name="crpProgramID">${crpProgramID}</param>
      </result>
    </action>
    
    
     <action name="{crp}/submit" class="org.cgiar.ccafs.marlo.action.impactpathway.ImpactSubmissionAction">
      <result name="input">/WEB-INF/crp/views/impactPathway/outcomes.ftl</result>
      <result name="success" type="redirectAction">
        <param name="actionName">${crpSession}/outcomes</param>
        <param name="crpProgramID">${progamID}</param>        
      </result>
    </action>
    
  </package>
</struts>
